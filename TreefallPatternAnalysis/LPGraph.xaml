<UserControl x:Class="TreefallPatternAnalysis.LPGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreefallPatternAnalysis"
             mc:Ignorable="d" 
             Focusable="True"
             d:DesignHeight="280" d:DesignWidth="640">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="280" Fill="#F7F8F8" VerticalAlignment="Center" Width="640"/>
        <WpfPlot HorizontalAlignment="Center" VerticalAlignment="Center" Height="280" Width="655" x:Name="plot" Focusable="True" PlottableDragged="NodeMoved" PlottableDropped="NodeDropped" />


    </Grid>
</UserControl>
